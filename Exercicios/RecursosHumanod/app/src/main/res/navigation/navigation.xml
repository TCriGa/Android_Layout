<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/cadastroFragment">

    <fragment
        android:id="@+id/detalheFragment"
        android:name="br.com.zup.recursoshumanos.fragment.DetalheFragment"
        android:label="fragment_detalhe"
        tools:layout="@layout/fragment_detalhe">
        <argument
            android:name="nomeArguments"
            app:argType="string" />
        <argument android:name="horasArquments"
            app:argType="float" />
        <argument
            android:name="salarioArguments"
            app:argType="float" />
    </fragment>
    <fragment
        android:id="@+id/cadastroFragment"
        android:name="br.com.zup.recursoshumanos.fragment.CadastroFragment"
        android:label="fragment_cadastro"
        tools:layout="@layout/fragment_cadastro">
        <action
            android:id="@+id/action_cadastroFragment_to_detalheFragment"
            app:destination="@id/detalheFragment" />
    </fragment>
</navigation>
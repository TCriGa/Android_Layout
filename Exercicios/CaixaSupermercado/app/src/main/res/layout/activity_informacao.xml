<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informacao.InformacaoActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/dimens_125"
        android:layout_height="@dimen/dimens_125"
        android:layout_margin="@dimen/margin_16"
        android:src="@drawable/carrinho_supermercado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.452" />

    <TextView
        android:id="@+id/text_totalCompras"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_margin="@dimen/margin_16"
        android:text="@string/valor_total"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.099"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="143dp" />

    <TextView
        android:id="@+id/text_total_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="R$ 0"
        android:textAllCaps="true"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/margin_16"
        app:layout_constraintBottom_toTopOf="@+id/button_RefazerCompras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_totalCompras" />

    <Button
        android:id="@+id/button_RefazerCompras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/cor_terciaria"
        android:text="@string/button_refazer_compra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_totalCompras"
        app:layout_constraintVertical_bias="0.363"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>